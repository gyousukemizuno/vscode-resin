{
	"name": "vscode-resin",
	"displayName": "vscode-resin",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:resinServerExplorer",
		"onCommand:resin.server.add",
		"onCommand:resin.server.delete",
		"onCommand:resin.server.start",
		"onCommand:resin.server.stop",
		"onCommand:resin.server.restart",
		"onCommand:resin.tree.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "resinServerExplorer",
					"name": "Resin Servers"
				}
			]
		},
		"commands": [
			{
				"command": "resin.server.add",
				"title": "Add",
				"category": "Resin",
				"icon": {
					"dark": "resources/dark/add.svg",
					"light": "resources/light/add.svg"
				}
			},
			{
				"command": "resin.server.delete",
				"title": "Delete",
				"category": "Resin"
			},
			{
				"command": "resin.server.start",
				"title": "Start",
				"category": "Resin"
			},
			{
				"command": "resin.server.stop",
				"title": "Stop",
				"category": "Resin"
			},
			{
				"command": "resin.server.restart",
				"title": "Restart",
				"category": "Resin"
			},
			{
				"command": "resin.tree.refresh",
				"title": "Refresh",
				"category": "Resin"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "resin.server.add",
					"when": " view == resinServerExplorer",
					"group": "navigation@0"
				}
			],
			"view/item/context": [
				{
					"command": "resin.server.start",
					"when": "view == resinServerExplorer && viewItem == 'server'"
				},
				{
					"command": "resin.server.stop",
					"when": "view == resinServerExplorer && viewItem == 'server'"
				},
				{
					"command": "resin.server.restart",
					"when": "view == resinServerExplorer && viewItem == 'server'"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2",
		"@types/fs-extra": "5.0.2"
	},
	"dependencies": {
		"fs-extra": "8.1.0"
	}
}